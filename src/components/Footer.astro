---
import { siteConfig } from '../data/site';

const { author } = siteConfig;
---

<footer class="py-16 md:py-24">
  <div class="max-w-2xl mx-auto px-6">
    <div class="flex flex-wrap gap-x-6 gap-y-2 text-neutral-500 dark:text-neutral-400">
      {author.twitter && (
        <a
          href={`https://x.com/${author.twitter}`}
          class="no-underline hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors"
          target="_blank"
          rel="noopener noreferrer"
        >
          x
        </a>
      )}
      {author.github && (
        <a
          href={`https://github.com/${author.github}`}
          class="no-underline hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors"
          target="_blank"
          rel="noopener noreferrer"
        >
          github
        </a>
      )}
      {author.instagram && (
        <a
          href={`https://instagram.com/${author.instagram}`}
          class="no-underline hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors"
          target="_blank"
          rel="noopener noreferrer"
        >
          instagram
        </a>
      )}
      <a
        href={`mailto:${author.email}`}
        class="no-underline hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors"
      >
        email
      </a>
      <a
        href="/rss.xml"
        class="no-underline hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors"
      >
        rss
      </a>
    </div>
  </div>
</footer>
