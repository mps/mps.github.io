---
import { siteConfig } from '../data/site';

const { author } = siteConfig;
const currentYear = new Date().getFullYear();
---

<footer class="py-16 md:py-24">
  <div class="max-w-2xl mx-auto px-6">
    <!-- Decorative divider -->
    <div class="flex items-center gap-4 mb-10">
      <div class="flex-1 h-px bg-gradient-to-r from-transparent via-neutral-300 dark:via-neutral-800 to-transparent"></div>
      <span class="text-neutral-300 dark:text-neutral-700 text-lg">&sect;</span>
      <div class="flex-1 h-px bg-gradient-to-r from-transparent via-neutral-300 dark:via-neutral-800 to-transparent"></div>
    </div>

    <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-6">
      <!-- Social links -->
      <div class="flex flex-wrap gap-x-6 gap-y-2 text-sm text-neutral-500">
        {author.twitter && (
          <a
            href={`https://x.com/${author.twitter}`}
            class="group no-underline-effect hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            <span>x</span>
            <span class="block h-0.5 w-0 group-hover:w-full bg-accent-500 transition-all duration-300 mt-0.5"></span>
          </a>
        )}
        {author.github && (
          <a
            href={`https://github.com/${author.github}`}
            class="group no-underline-effect hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            <span>github</span>
            <span class="block h-0.5 w-0 group-hover:w-full bg-accent-500 transition-all duration-300 mt-0.5"></span>
          </a>
        )}
        {author.instagram && (
          <a
            href={`https://instagram.com/${author.instagram}`}
            class="group no-underline-effect hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            <span>instagram</span>
            <span class="block h-0.5 w-0 group-hover:w-full bg-accent-500 transition-all duration-300 mt-0.5"></span>
          </a>
        )}
        <a
          href={`mailto:${author.email}`}
          class="group no-underline-effect hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors"
        >
          <span>email</span>
          <span class="block h-0.5 w-0 group-hover:w-full bg-accent-500 transition-all duration-300 mt-0.5"></span>
        </a>
        <a
          href="/rss.xml"
          class="group no-underline-effect hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors"
        >
          <span>rss</span>
          <span class="block h-0.5 w-0 group-hover:w-full bg-accent-500 transition-all duration-300 mt-0.5"></span>
        </a>
      </div>

      <!-- Copyright & Credits -->
      <div class="text-xs text-neutral-400 dark:text-neutral-600 text-right">
        <p>&copy; {currentYear}</p>
        <p class="mt-1">
          Design & development by{' '}
          <a
            href="https://idlefusion.com"
            class="no-underline-effect hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            Idle Fusion
          </a>
        </p>
      </div>
    </div>
  </div>
</footer>
