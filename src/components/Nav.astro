---
import { siteConfig } from '../data/site';
---

<nav class="pt-12 md:pt-16 pb-8 md:pb-12">
  <div class="max-w-2xl mx-auto px-6">
    <div class="flex justify-between items-start">
      <!-- Name and tagline -->
      <div class="flex flex-col gap-2">
        <a
          href="/"
          class="group no-underline-effect"
        >
          <span class="font-display text-2xl md:text-3xl font-medium text-neutral-100 tracking-tight">
            {siteConfig.author.name.toLowerCase()}
          </span>
          <!-- Decorative underline -->
          <span class="block h-0.5 w-0 group-hover:w-full bg-accent-500 transition-all duration-300 mt-1"></span>
        </a>
        <p class="text-sm text-neutral-500 tracking-wide">
          engineering &middot; writing &middot; building
        </p>
      </div>

      <!-- Navigation links -->
      <div class="flex items-center gap-6">
        <div class="flex gap-5 text-sm text-neutral-500">
          <a
            href="/blog"
            class="no-underline-effect hover:text-neutral-100 transition-colors"
          >
            blog
          </a>
          <a
            href="/about"
            class="no-underline-effect hover:text-neutral-100 transition-colors"
          >
            about
          </a>
          <a
            href="/hire"
            class="no-underline-effect hover:text-neutral-100 transition-colors"
          >
            hire
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>
